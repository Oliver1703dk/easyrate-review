# Server
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27018/easyrate

# JWT
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# Webapp Bridge (shared secret for service-to-service auth)
REVIEW_SERVICE_JWT_SECRET=              # MUST match webapp .env â€” Generate: openssl rand -hex 32

# Review Token (for public review landing page links)
REVIEW_TOKEN_SECRET=                    # Generate: openssl rand -hex 32
REVIEW_TOKEN_EXPIRES_IN=60d

# SMS Provider (InMobile)
INMOBILE_API_KEY=
INMOBILE_SENDER_ID=EasyRate
INMOBILE_WEBHOOK_SECRET=
INMOBILE_STATUS_CALLBACK_URL=

# Email Provider (Resend)
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@easyrate.app
RESEND_FROM_NAME=EasyRate
RESEND_WEBHOOK_SECRET=

# AWS S3
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=easyrate-uploads
S3_UPLOAD_URL_EXPIRY=300                # Presigned upload URL expiry in seconds (default: 300)
S3_DOWNLOAD_URL_EXPIRY=3600             # Presigned download URL expiry in seconds (default: 3600)

# Frontend URL (for CORS and links)
FRONTEND_URL=http://localhost:3000

# AI Providers
# Grok (Primary) - https://x.ai
GROK_API_KEY=
GROK_MODEL=grok-4-1-fast-non-reasoning

# OpenAI (Fallback) - https://platform.openai.com
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo

# Error Monitoring (Sentry)
SENTRY_DSN=

# Google Business Profile API (OAuth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/api/v1/google/auth/callback
